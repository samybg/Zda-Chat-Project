<Window x:Class="Chat_Client_Interface.privateChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="privateChatWindow" Height="412.525" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF34A20B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="chatbox" HorizontalAlignment="Left" Height="67" Margin="10,305,0,0" TextWrapping="Wrap" Text="Type here..." VerticalAlignment="Top" Width="272" KeyDown="chatbox_KeyDown" MouseEnter="chatbox_MouseEnter" MouseLeave="chatbox_MouseLeave"/>
        <TextBox x:Name="chatWindow" HorizontalAlignment="Left" Height="290" Margin="10,10,0,0" TextWrapping="Wrap" Text="Connected!" IsReadOnlyCaretVisible="True" VerticalAlignment="Top" Width="272" KeyDown="chatWindow_KeyDown"/>

    </Grid>
</Window>
